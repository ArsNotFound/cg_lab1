    Priority: 1

  - Regex: '<(GL/freeglut.h)>'
    Priority: 2

  - Regex: '^<[A-Za-z0-9_-]+>$'
    Priority: 3

  - Regex: '^"'
    Priority: 5

  - Regex: '^<'
    Priority: 4
